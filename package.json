{
  "name": "chat-vault",
  "version": "1.0.0",
  "description": "Export AI chat conversations to durable JSON and Markdown formats",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "wxt build",
    "zip": "wxt zip",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@webext-core/messaging": "^1.4.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@webext-core/fake-browser": "^1.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "wxt": "^0.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "spawn-sync"
    ]
  }
}
